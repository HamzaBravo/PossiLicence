@{
    ViewData["Title"] = "Possi Lisans Yönetim Sistemi";
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <!-- FontAwesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <!-- Custom CSS -->

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

</head>

<body>
    <div class="floating-particles"></div>

    <div class="container">
        <!-- Hero Section -->
        <div class="hero-section">
            <div class="brand-logo">
                PL
            </div>
            <h1 class="hero-title">PossiLicence</h1>
            <p class="hero-subtitle">
                Güvenilir ve Modern Lisans Yönetim Sistemi
            </p>
            <p class="lead">
                Yazılım lisanslarınızı kolayca yönetin, takip edin ve kontrol edin.
            </p>
        </div>

        <!-- Features Section -->
        <div class="features-section">
            <div class="row">
                <div class="col-lg-4 col-md-6">
                    <div class="feature-card text-center">
                        <div class="feature-icon">
                            <i class="fas fa-shield-alt"></i>
                        </div>
                        <h4 class="feature-title">Güvenli Lisans Kontrolü</h4>
                        <p class="feature-description">
                            Her firma için benzersiz ID ile güvenli lisans doğrulaması yapın.
                            Gerçek zamanlı kontrol sistemi ile lisans durumunu anında öğrenin.
                        </p>
                    </div>
                </div>

                <div class="col-lg-4 col-md-6">
                    <div class="feature-card text-center">
                        <div class="feature-icon">
                            <i class="fas fa-building"></i>
                        </div>
                        <h4 class="feature-title">Firma Yönetimi</h4>
                        <p class="feature-description">
                            Müşteri firmalarınızı kolayca ekleyin, düzenleyin ve yönetin.
                            Detaylı iletişim bilgileri ve lisans geçmişi takibi.
                        </p>
                    </div>
                </div>

                <div class="col-lg-4 col-md-6">
                    <div class="feature-card text-center">
                        <div class="feature-icon">
                            <i class="fas fa-box"></i>
                        </div>
                        <h4 class="feature-title">Esnek Paket Sistemi</h4>
                        <p class="feature-description">
                            Aylık, günlük ve bonus süreli paketler oluşturun.
                            Farklı müşteri ihtiyaçlarına göre özelleştirilebilir paket yapısı.
                        </p>
                    </div>
                </div>

                <div class="col-lg-4 col-md-6">
                    <div class="feature-card text-center">
                        <div class="feature-icon">
                            <i class="fas fa-chart-line"></i>
                        </div>
                        <h4 class="feature-title">Detaylı Raporlama</h4>
                        <p class="feature-description">
                            Aktif lisanslar, süresi dolanlar ve genel istatistikler.
                            Gelişmiş dashboard ile işinizi daha iyi yönetin.
                        </p>
                    </div>
                </div>

                <div class="col-lg-4 col-md-6">
                    <div class="feature-card text-center">
                        <div class="feature-icon">
                            <i class="fas fa-clock"></i>
                        </div>
                        <h4 class="feature-title">Gerçek Zamanlı Kontrol</h4>
                        <p class="feature-description">
                            API entegrasyonu ile yazılımlarınızdan anında lisans kontrolü.
                            Hızlı ve güvenilir doğrulama sistemi.
                        </p>
                    </div>
                </div>

                <div class="col-lg-4 col-md-6">
                    <div class="feature-card text-center">
                        <div class="feature-icon">
                            <i class="fas fa-cog"></i>
                        </div>
                        <h4 class="feature-title">Kolay Yönetim</h4>
                        <p class="feature-description">
                            Modern ve kullanıcı dostu arayüz.
                            Tüm işlemlerinizi kolayca gerçekleştirin ve takip edin.
                        </p>
                    </div>
                </div>
            </div>

            <!-- Stats Section -->
            <div class="stats-section">
                <div class="stat-item">
                    <div class="stat-number">
                        <i class="fas fa-users"></i>
                    </div>
                    <div class="stat-label">Güvenilir Müşteri Yönetimi</div>
                </div>
                <div class="stat-item">
                    <div class="stat-number">
                        <i class="fas fa-lock"></i>
                    </div>
                    <div class="stat-label">%100 Güvenli Sistem</div>
                </div>
                <div class="stat-item">
                    <div class="stat-number">
                        <i class="fas fa-rocket"></i>
                    </div>
                    <div class="stat-label">Hızlı Performans</div>
                </div>
                <div class="stat-item">
                    <div class="stat-number">
                        <i class="fas fa-headset"></i>
                    </div>
                    <div class="stat-label">7/24 Destek</div>
                </div>
            </div>
        </div>

        <!-- Footer -->
        <div class="footer-section">
            <div class="row">
                <div class="col-md-6">
                    <p class="mb-0">
                        <i class="fas fa-shield-alt me-2"></i>
                        © 2025 PossiLicence - Tüm hakları saklıdır
                    </p>
                </div>
                <div class="col-md-6 text-md-end">
                    <p class="mb-0">
                        Güvenilir Lisans Yönetim Sistemi
                        <i class="fas fa-heart ms-2" style="color: #ff6b6b;"></i>
                    </p>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>